    <data>

        <variable
            name="viewModel"
            type="net.bouzuya.sample5.EditViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditFragment">

        <TextView
